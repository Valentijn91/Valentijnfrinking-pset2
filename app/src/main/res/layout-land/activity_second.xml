<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vfrin.valentijnfrinking_pset2.SecondActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/fill_in_instructions"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submitWord"
        android:text="@string/submit_word"
        android:id="@+id/submit_button"
        android:layout_alignBottom="@+id/fillInBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/words_left"
        android:id="@+id/textNumLeft"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/fillInBox"
        android:layout_toLeftOf="@+id/submit_button"
        android:layout_toStartOf="@+id/submit_button"
        android:layout_marginRight="87dp"
        android:layout_marginEnd="87dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Fill in"
        android:id="@+id/fillInBox"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="81dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignTop="@+id/numLeft">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numLeft"
        android:layout_alignBaseline="@+id/textNumLeft"
        android:layout_alignBottom="@+id/textNumLeft"
        android:layout_toLeftOf="@+id/textNumLeft"
        android:layout_toStartOf="@+id/textNumLeft"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />


</RelativeLayout>